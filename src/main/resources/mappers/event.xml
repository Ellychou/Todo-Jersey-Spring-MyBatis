<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ellychou.todo.rest.dao.EventDao">
    <resultMap id="eventMap" type="Event" >
        <id column="event_id" property="eventId"  />
        <result column="title" property="title" />
        <result column="description" property="description" />
        <result column="done_time" property="doneTime" />
        <result column="start_time" property="startTime" />
        <result column="user_id" property = "userId" />
        <result column="is_done" property="isDone" />
        <result column="is_notify" property="isNotified" />
    </resultMap>

    <!-- ************** CREATE ************** -->
    <insert id="createEvent" parameterType="Event" useGeneratedKeys="true">
        INSERT
          INTO event
        SET
            title = #{title},
            description = #{description},
            done_time = #{doneTime},
            start_time = #{startTime},
            user_id = #{userId},
            is_done = 0,
            is_notify = 0
    </insert>

    <!-- ************** READ ************** -->
    <select id="getEventListByUserId" resultMap="eventMap" parameterType="Long">
        SELECT * FROM event
        WHERE user_id = #{userId}
    </select>

    <select id="getEventById" resultMap="eventMap" parameterType="Long">
        SELECT *
        FROM
          event
        WHERE
          event_id = #{value}
    </select>

    <select id="getCompleteList" resultMap="eventMap" parameterType="Long">
        SELECT * FROM event
        WHERE user_id = #{userId}
        AND is_done = 1
    </select>

    <select id="getUncompletedList" resultMap="eventMap" parameterType="Long">
        SELECT * FROM event
        WHERE user_id = #{userId}
        AND is_done = 0
    </select>

    <select id="getNotifiedList" resultMap="eventMap" parameterType="Long">
        SELECT * FROM event
        WHERE user_id = #{userId}
        AND is_notify = 1
    </select>


    <!-- ************** UPDATE ************** -->
    <update id="updateEvent" parameterType="map">
        UPDATE
          event
        SET
            <if test="event_id != null"> event_id = #{eventId},</if>
            <if test="title != null"> title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="done_time != null">done_time = #{doneTime},</if>
            <if test="start_time != null">start_time = UTC_TIMESTAMP()</if>
            <if test="is_done != null"> is_done= #{isDone} </if>
            <if test="is_notify != null">is_notify = #{is_notify}</if>
        WHERE
            event_id = #{eventId}
        AND user_id = #{userId}
    </update>

    <update id="updateEventIsDone" parameterType="map">
        UPDATE event
        SET is_done = 1
        WHERE even_id = #{eventId}
        AND user_id = #{userId}
    </update>

    <update id="updateEventIsNotified" parameterType="map">
        UPDATE event
        SET is_notify = 1
        WHERE even_id = #{eventId}
        AND user_id = #{userId}
    </update>

    <!-- ************** DELETE ************** -->
    <delete id="deleteEvent" parameterType= "map">
        DELETE FROM event WHERE user_id = #{userId} AND even_id = #{eventId}
    </delete>
    <!-- DELETE all -->
    <delete id="deleteEvents">
        TRUNCATE TABLE event
    </delete>
</mapper>
