<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ellychou.todo.rest.dao.UserDao">
    <resultMap id="userMap" type="User">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="email" property="email"/>
        <result column="password" property="password" />
        <result column="create_time" property="createdTime" />
        <result column="login_time" property="loginTime" />
    </resultMap>

    <!-- ************** CREATE ************** -->
    <insert id="createUser" parameterType="User" useGeneratedKeys="true">
        INSERT
          INTO user
        SET
            user_name = #{userName},
            email = #{email},
            password = #{password},
            create_time = #{createdTime},
            login_time = #{loginTime}
    </insert>

    <!-- ************** READ ************** -->
    <select id="getUsers" resultMap="userMap">
        SELECT
            user_id,
            user_name,
            email,
            password,
            create_time,
            login_time
        FROM user
    </select>

    <select id="getUserById" resultMap="userMap" parameterType="Long">
        SELECT
          user_id,
          user_name,
          email,
          password,
          create_time,
          login_time
        FROM user
        WHERE user_id = #{id};
    </select>

    <select id="getUserByNameOrEmail" resultMap="userMap" parameterType="String">
        SELECT * FROM user
        WHERE
          ${key} = #{value};
    </select>
    <!-- ************** UPDATE ************** -->
    <update id="updateUser" parameterType="User">
        UPDATE user
        SET
            <if test="userId != null"> user_id = #{userId},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="email != null">email = #{email},</if>
            <if test="password != null">password = #{password},</if>
            <if test="createdTime != null">create_time = #{createdTime},</if>
           login_time = UTC_TIMESTAMP()
        WHERE
            user_id = #{userId}
    </update>

    <!-- ************** DELETE ************** -->
    <delete id="deleteUserById" parameterType="Long">
        DELETE FROM user WHERE user_id = #{userId}
    </delete>

    <delete id="deleteUsers">
        TRUNCATE TABLE user
    </delete>

</mapper>